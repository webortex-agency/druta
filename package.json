    "inquirer": "^9.2.15",
    "ora": "^8.0.1",
    "semver": "^7.6.0",
    "yaml": "^2.4.1",
    "ajv": "^8.12.0",
    "mime-types": "^2.1.35",
    "fast-glob": "^3.3.2"
